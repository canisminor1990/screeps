	},
	"scripts": {
		"start": "yarn clear && webpack --watch",
		"build": "yarn clear && cross-env NODE_ENV=production webpack",
		"clear": "rm -rf dist/* && clear",
		"lint": "lint-staged",
		"lint:style": "stylelint 'src/**/*.js'",
		"lint:es": "eslint --fix --ext .js src"
	},
	"pre-commit": ["lint"],
	"lint-staged": {
		"README.md": [
			"prettier --trailing-comma all --single-quote --write",
			"git add"
		],
		"package.json": [
			"prettier --trailing-comma all --single-quote --write",
			"git add"
		],
		"webpack.config.babel.js": ["eslint --fix", "git add"],
		"src/**/*.js": ["eslint --fix", "git add"]
	},
	"dependencies": {
		"babel-plugin-dynamic-import-webpack": "^1.0.2",
		"dva-core": "^1.1.0",
		"path": "^0.12.7",
		"redux-logger": "^3.0.6",
		"screeps-perf": "^0.0.1",
		"screeps-profiler": "^2.0.1",
		"screeps-regenerator-preset": "^1.0.0",
		"screeps-regenerator-runtime": "^1.0.0",
		"webpack": "^3.10.0"
	},
	"devDependencies": {
		"ScreepsAutocomplete": "https://github.com/Garethp/ScreepsAutocomplete.git",
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.2.2",
		"babel-loader": "^7.1.3",
		"babel-minify-webpack-plugin": "^0.3.0",
		"babel-plugin-add-module-exports": "^0.2.1",
		"babel-plugin-lodash": "^3.3.2",
		"babel-plugin-transform-flow-strip-types": "^6.22.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.6.1",
		"babel-preset-stage-0": "^6.24.1",
		"babel-runtime": "^6.26.0",
		"cross-env": "^5.1.4",
		"es6-promise": "^4.2.4",
		"eslint": "^4.13.1",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-standard": "^10.2.1",
		"eslint-loader": "^2.0.0",
		"eslint-plugin-flowtype": "^2.37.0",
		"eslint-plugin-import": "^2.7.0",
		"eslint-plugin-node": "^5.2.0",
		"eslint-plugin-prettier": "^2.3.1",
		"eslint-plugin-promise": "^3.5.0",
		"eslint-plugin-react": "^7.4.0",
		"eslint-plugin-standard": "^3.0.1",
		"lint-staged": "^4.2.3",
		"lodash": "^4.17.4",
		"pre-commit": "^1.2.2",
		"prettier": "^1.9.2",
		"screeps-webpack-plugin": "^1.1.0"
	}
}