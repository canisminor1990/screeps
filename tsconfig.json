{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "sourceMap": false,
    "declaration":true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noResolve": false,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "webpack.config.ts",
    "config/*.ts",
    "config/*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "example",
    "backup",
    "dist",
    "node_modules"
  ]
}
